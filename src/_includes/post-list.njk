<div class="article col col-4 col-d-6 col-t-12">
  <div class="article__inner">

    <div class="article__head">

      {% if image %}
      <a class="article__image" href="{% if site.env == 'prod' %}{{ site.prod_url}}{% else %}{{site.dev_url}}{% endif %}{{ permalink }}">
        <img class="lazy" data-src="{% if site.env == 'prod' %}{{ site.prod_url}}{% else %}{{site.dev_url}}{% endif %}{{ image }}" alt="{{ title }}">
      </a>
      {% endif %}

    </div>

    <div class="article__content">

      <h2 class="article__title">
        <a href="{% if site.env == 'prod' %}{{ site.prod_url}}{% else %}{{site.dev_url}}{% endif %}{{ permalink }}">{{ title }}</a>
      </h2>

      {% if description %}
        <p class="article__excerpt">{{ description }}</p>
      {% endif %}

    </div>
  </div>
</div>
